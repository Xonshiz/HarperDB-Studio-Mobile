<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HarperDBStudioMobile.Views.ScrollingGridView"
    WidthRequest="100000000">
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsClippedToBounds="False">
        <Grid x:Name="gridView"  IsClippedToBounds="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
            </Grid>
    </Grid>
</ContentView>

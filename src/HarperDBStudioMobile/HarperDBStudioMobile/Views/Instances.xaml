<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Name="currentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:HarperDBStudioMobile.ViewModels"
    x:Class="HarperDBStudioMobile.Views.Instances">
    <ContentPage.BindingContext>
        <vm:InstancesViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout x:Name="mainStackLayout">
        <StackLayout x:Name="InstanceLoginStackLayout" IsVisible="False">
            <Entry x:Name="instance_username" />
            <Entry x:Name="instance_password" IsPassword="True" />
            <Button x:Name="instance_submit_button" Text="Submit" Clicked="instance_submit_button_Clicked" />
            <Button x:Name="instance_cancel_button" Text="Cancel" Clicked="instance_cancel_button_Clicked" />
        </StackLayout>
        <CarouselView x:Name="InstanceCarousel" PositionChanged="InstanceCarousel_PositionChanged">
        <CarouselView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CarouselItemTapped,Source={x:Reference currentPage}}" CommandParameter="{Binding .}"/>
                    </StackLayout.GestureRecognizers>
                    <Frame HasShadow="True"
                            BorderColor="DarkGray"
                            CornerRadius="5"
                            Margin="20"
                            HeightRequest="300"
                            HorizontalOptions="Center"
                            VerticalOptions="CenterAndExpand">
                        <StackLayout>
                            <StackLayout>
                                <Label Text="{Binding rule_arn}"
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            <Label Text="{Binding rule_arn}"
                                    HorizontalOptions="Center" />
                            <Label Text="{Binding instance_name}"
                                    FontAttributes="Italic"
                                    HorizontalOptions="Center"
                                    MaxLines="5"
                                    LineBreakMode="TailTruncation" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>
    </StackLayout>
</ContentPage>
